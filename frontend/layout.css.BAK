/* ==========================================================================
   LAYOUT SYSTEM
   ========================================================================== */

:root {
    /* Layout Dimensions */
    --panel-width: 260px;
    --top-bar-height: 60px;
    --main-padding: 40px;
    
    /* Transitions */
    --transition-duration: 0.3s;
    --transition-timing: ease;
    
    /* Shadows */
    --panel-shadow: 2px 0 8px rgba(0,0,0,0.04);
    --header-shadow: 0 4px 16px rgba(0,0,0,0.06);
    
    /* Colors */
    --bg-color: #f7f8fa;
    --panel-bg: #ffffff;
    --border-color: #eee;
}

/* Core Layout Classes */
.layout-3col {
    display: grid;
    grid-template-columns: 0 1fr 0;  /* Start with both panels collapsed */
    min-height: 100vh;
    position: relative;
    transition: grid-template-columns var(--transition-duration) var(--transition-timing);
    background: var(--bg-color);
    overflow-x: hidden; /* Prevent horizontal scrollbar */
}

/* ==========================================================================
   PANEL TRANSITIONS & ANIMATIONS
   ========================================================================== */

.panel-base {
    width: var(--panel-width);
    background: var(--panel-bg);
    box-shadow: var(--panel-shadow);
    transition: transform var(--transition-duration) var(--transition-timing);
    position: relative;
    z-index: 2;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

/* Left Panel */
.panel-left {
    padding: 32px 0 0 0;
    transform: translateX(-100%);
}

.panel-left.panel-visible {
    transform: translateX(0);
}

/* Main Panel */
.panel-main {
    min-width: 0;
    width: 100%;
    padding: var(--main-padding);
    display: flex;
    flex-direction: column;
    align-items: stretch;
    position: relative;
    z-index: 1;
    background: var(--bg-color);
    overflow-y: auto;
    box-sizing: border-box;
}

/* Right Panel */
.panel-right {
    padding: 32px 0 0 0;
    transform: translateX(100%);
}

.panel-right.panel-visible {
    transform: translateX(0);
}

/* ==========================================================================
   PANEL CONTENT
   ========================================================================== */

/* Panel Headers */
.panel-header {
    padding: 0 20px 20px 20px;
    border-bottom: 1px solid var(--border-color);
    flex-shrink: 0;
    background: var(--panel-bg);
    position: relative;
    z-index: 3;
    margin-bottom: 0;
}

/* Panel Content Areas */
.panel-content {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
    min-height: 200px;
    background: var(--panel-bg);
    position: relative;
    z-index: 3;
}

/* Top Bar */
.top-bar {
    width: 100%;
    background: #e3f0fb;
    padding: 0 24px;
    height: var(--top-bar-height);
    display: flex;
    align-items: center;
    justify-content: flex-end;
    box-sizing: border-box;
    gap: 10px;
    border-bottom: 1px solid #b6d4ef;
    position: relative;
    z-index: 10;
} 